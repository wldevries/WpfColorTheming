<Window x:Class="WpfColorTheming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfColorTheming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
    <Grid Width="640" Height="480">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Style="{StaticResource ButtonGray}" Margin="0 0 0 10">Button 1</Button>
            <Button Style="{StaticResource ButtonBlue}">Button 1</Button>
        </StackPanel>
    </Grid>
    </Viewbox>
</Window>

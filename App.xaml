<Application x:Class="WpfColorTheming.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfColorTheming"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Palette.xaml" />
                <ResourceDictionary Source="/ButtonStyles.xaml" />
                <ResourceDictionary Source="/DatePickerStyles.xaml" />
                <ResourceDictionary Source="/DatePickerBlend.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
